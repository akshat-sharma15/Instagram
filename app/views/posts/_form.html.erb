<h2>New Post</h2>
<%if @user%>
  <%= form_with(model: [@user, @user.posts.build], local: true, id: 'post-form') do |form| %>

    <div class="form-group">
      <img id="image-preview" src="#" alt="Your Image Preview" style="max-width: 100%; height: auto; display: none;" />
      <video id="video-preview" style="display: none; max-width: 60%; margin-top: 10px;" controls></video>
    </div>

    <%= form.file_field :media, id: 'picture-input'%>

    <div class="form-group2">
      <%= form.label :caption %>
      <%= form.text_field :caption, class: 'form-control' %>
    </div>

    <div class="form-group2">
      <%= form.submit 'Share', class: 'btn btn-primary' %>
    </div>
  <% end %>
<%end%>
